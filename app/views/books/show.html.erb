
<div class= "body">

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">

<div class="row">

<div class="col-xs-3" >

<%= render 'users/profile',user: @user %>

<%= render "books/new",book: @book_new %>

</div>

<div class="col-xs-9">

<h1>Book detail</h1>

<table class= "table">
  <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: '50x50'%><br><%= link_to @user.name, user_path(@book.user_id) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>

<!-- もしカレントユーザーと本の持つユーザーIDが同じなら -->
    <% if current_user.id == @book.user_id %>
      <td><%= link_to edit_book_path(@book.id), class: "btn-sm btn-success " do %>
      <span>Edit</span>

      <% end %>
      </td>

      <td><%= link_to book_path(@book.id), method: :delete, "data-confirm" => "Are you sure？", class: " btn-sm btn-danger "  do %>

      <span>Destroy</span>

      <% end %>
      </td>

    <% end %>

    </tr>
 </tbody>

</table>

</div>

</div>
</div>
</div>

