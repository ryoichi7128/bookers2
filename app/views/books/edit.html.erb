
<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	   <h2><%= @book.errors.count %>error!!!</h2>
          <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
          </ul>
  </div>
<% end %>


<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<h4>Title</h4>

<%= f.text_field :title %>

<h4>Body</h4>

<%= f.text_area :body %>

<%= f.submit "Update Book" %>

<% end %>

<%= link_to "Show", book_path(@book.id) %>

<%= link_to "Back", books_path %>


