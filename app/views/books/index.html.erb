<div class= "body">

<div class="container">

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<% if @book.errors.any? %>
     <div class="alert alert-warning">
          <h2><%= @book.errors.count %>error!!!</h2>
          <ul>
           <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
          </ul>
     </div>
<% end %>


<div class="row">

<div class="col-xs-3" >

<%= render 'users/profile',user: @user %>

<%= render "books/new",book: @book %>

</div>


<div class="col-xs-9">

<h1>Books</h1>

<table class= "table table-hover table-inverse" >
 <thead>
     <tr>
      <th></th>
 	    <th>Title</th>
 	    <th>opinion</th>
      <th colspan="3"></th>
     </tr>
 </thead>

 <tbody>

     <% @books.each do |book| %>

        <tr>
           <td>
            <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
            <% end %>
           </td>
           <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td>
        </tr>

     <% end %>

 </tbody>
</table>
</div>

</div>
</div>

</div>

