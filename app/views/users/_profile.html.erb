
<h1>User info</h1>

<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %>

<table class= "table">
 <tbody>
   <tr><th>name</th> <th><%= user.name %></th></tr>

   <tr><th>introduction</th> <th><%= user.introduction %></th></tr>
 </tbody>
</table>

<div class="row">

  <%= link_to edit_user_path(user.id), class: "btn btn-default" do %>

  <span class= "glyphicon glyphicon-wrench" style="width:250px;"></span>

  <% end %>

</div>




