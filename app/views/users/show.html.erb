<div class= "body">

<div class="container">

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="row">

<div class="col-xs-3" >

<%= render 'users/profile',user: @user %>

<%= render "books/new",book: @book %>

</div>

<div class="col-xs-9">

<h2>Books</h2>

<table class="table table-hover table-inverse" >
 <thead>
  <tr>
 	<th></th>
 	<th>Title</th>
 	<th>opinion</th>
 	<th colspan="3"></th>
  </tr>
 </thead>

 <tbody>
  <% @books.each do |book| %>
    <tr>
	  <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %></td>
	  <td><%= link_to book.title ,book_path(book.id) %></td>
    <td><%= book.body %></td>
    </tr>
  <% end %>


 </tbody>
</table>
</div>

</div>
</div>


</div>
