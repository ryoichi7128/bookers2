
<h1>User info</h1>

<% if @user.errors.any? %>
  <div class="alert alert-warning">
  	<h2><%= @user.errors.count %>error!!!</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@user) do |f| %>

<h4>name</h4>

<%= f.text_field :name %>

<h4>Image</h4>

<%= f.attachment_field :profile_image %>

<h4>introduction</h4>

<%= f.text_area :introduction %>

<%= f.submit "Update User" %>

<% end %>



